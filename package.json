    "private": true,
    "dependencies": {
        "@sap/cds": "^7",
        "@sap/cds-hana": "^2",
        "@sap/xssec": "^3.6.1",
        "express": "^4",
        "passport": "^0.7.0"
    },
    "devDependencies": {
        "@cap-js/sqlite": "^1",
        "@sap/cds-dk": "^7",
        "@sap/eslint-plugin-ui5-jsdocs": "^2.0.5",
        "@sap/ux-specification": "^1.120.8",
        "@sapui5/ts-types": "^1.92.2",
        "eslint": "^7.32.0",
        "rimraf": "^3.0.2"
    },
    "scripts": {
        "start": "cds-serve",
        "watch-first_fs_project": "cds watch --open first_fs_project/webapp/index.html?sap-ui-xx-viewCache=false",
        "undeploy": "cf undeploy Sample_prjct --delete-services --delete-service-keys --delete-service-brokers",
        "build": "rimraf resources mta_archives && mbt build --mtar archive",
        "deploy": "cf deploy mta_archives/archive.mtar --retries 1",
        "watch-first_fs_app": "cds watch --open first_fs_app/webapp/index.html?sap-ui-xx-viewCache=false"
    },
    "cds": {
        "requires": {
            "db": {
                "[devlopment]": {
                    "kind": ""
                },
                "[production]": {
                    "kind": "hana"
                }
            },
            "[production]": {
                "auth": "xsuaa"
            },
            "[development]": {
                "auth": {
                    "kind": "mocked",
                    "users": {
                        "admin@sap.com": {
                            "password": "Initial",
                            "ID": "admin@sap.com",
                            "roles": [
                                "Admin"
                            ]
                        },
                        "user@sap.com": {
                            "password": "Initial",
                            "ID": "user@sap.com",
                            "roles": [
                                "User"
                            ]
                        }
                    }
                }
            },
            "destinations": true
        }
    }
}
