<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form"
>
    <form:SimpleForm
        id="idAuthorAddressForm"
        editable="false"
        layout="ColumnLayout"
        columnsM="2"
        columnsL="3"
        columnsXL="4"
        binding="{address}"
    >
        <Label
            id="idCityLabel"
            text="City"
        />
        <Text
            id="idCityText"
            text="{city}"
        />

        <Label
            id="id_addressLabel"
            text="Address"
        />
        <Text
            id="id_addressText"
            text="{_address}"
        />
        <Label
            id="idPincodeLabel"
            text="Pincode"
        />
        <Text
            id="idPincodeText"
            text="{pincode}"
        />
        <Label
            id="idStreetLabel"
            text="Street"
        />
        <Text
            id="idStreetText"
            text="{street}"
        />
        <Label
            id="idLandmarkLabel"
            text="Landmark"
        />
        <Text
            id="idLandmarkText"
            text="{landmark}"
        />
    </form:SimpleForm>
</core:FragmentDefinition>
