<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
>
    <Dialog
        id="idCreateAuthorDialog"
        resizable="true"
        draggable="true"
        contentWidth="30%"
        title="Create Author"
    >
        <beginButton>
            <Button
                id="idCreateButton"
                text="Create"
                press="onCreateAuthor"
                type="Success"
            />
        </beginButton>
        <endButton>
            <Button
                id="idCancelButton"
                text="Cancel"
                press="onCloseDialog"
                type="Negative"
            />
        </endButton>
        <content>
            <form:SimpleForm
                id="idEmployeeDetailsForm"
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanXL="3"
                labelSpanL="3"
                labelSpanM="3"
                labelSpanS="12"
                adjustLabelSpan="false"
                emptySpanXL="4"
                emptySpanL="4"
                emptySpanM="4"
                emptySpanS="0"
                columnsXL="1"
                columnsL="1"
                columnsM="1"
                singleContainerFullSize="false"
            >
                <Label
                    id="idAuthorNameLabel"
                    text="Author Name"
                />
                <Input
                    id="idAuthorName"
                    value="{newAuthorModel>/author}"
                />
                <Label
                    id="idbookNameLabel"
                    text="Book Name"
                />
                <Input
                    id="idbookNameInput"
                    value="{newAuthorModel>/bookName}"
                />
                <Label
                    id="idstockLabel"
                    text="Stock"
                />
                <Input
                    id="idStockInput"
                    value="{newAuthorModel>/stock}"
                />
                <Label
                    id="idBooksSoldLabel"
                    text="Books Sold"
                />
                <Input
                    id="idbooks_soldInput"
                    value="{newAuthorModel>/books_sold}"
                />
                <Label
                    id="idPublishedOnLabel"
                    text="Published On"
                />
                <Input
                    id="idPublishedOnInput"
                    value="{newAuthorModel>/published_on}"
                />
                <Label
                    id="idPhoneLabel"
                    text="Phone"
                />
                <Input
                    id="idPhoneInput"
                    value="{newAuthorModel>/phone}"
                />
            </form:SimpleForm>
        </content>
    </Dialog>
</core:FragmentDefinition>