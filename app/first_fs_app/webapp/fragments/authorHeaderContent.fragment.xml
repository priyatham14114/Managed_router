<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:m="sap.m"
>
    <m:FlexBox
        id="idFlexbox"
        wrap="Wrap"
        fitContainer="true"
    >
        <m:Avatar
            id="idAvatar"
            class="sapUiSmallMarginEnd"
            src="{photo}"
            displaySize="L"
        />

        <VBox
            id="idVlayout"
            class="sapUiSmallMarginBeginEnd"
        >
            <m:Link
                id="idlink"
                text="{phone}"
            />
            <m:Link
                id="idMail"
                text="{personalInfo/email}"
            />
        </VBox>

        <HBox
            id="idHlayout"
            class="sapUiSmallMarginBeginEnd"
        >
            <m:Image
                id="idlinkedin"
                src="https://static-00.iconduck.com/assets.00/linkedin-icon-2048x2048-7zb6wa8q.png"
                width="20px"
                height="20px"
            />
            <m:Image
                id="idX"
                src="https://e7.pngegg.com/pngimages/708/311/png-clipart-twitter-twitter-thumbnail.png"
                class="sapUiSmallMarginBegin"
                width="20px"
                height="20px"
            />
        </HBox>

        <VBox
            id="idVlayout2"
            class="sapUiSmallMarginBeginEnd"
        >
            <m:Label
                id="idlableAuthordata"
                text="Hello! I am {author} and I write Books"
            />
        </VBox>

        <VBox
            id="idVlayout3"
            class="sapUiSmallMarginBeginEnd"
        >
            <m:Label
                id="idlabelAddr"
                text="{address/city}"
            />
        </VBox>
    </m:FlexBox>
</core:FragmentDefinition>
